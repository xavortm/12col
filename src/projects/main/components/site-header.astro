}
    
.site-header {
    container: site-header / inline-size;

    --cell-padding: 10px;
    --cell-stroke: 1px solid var(--color-stroke);
}

.site-header__inner {
    padding-block-start: var(--cell-padding);
}

.site-header__primary {
    display: flex;
    border-block: var(--cell-stroke);
}

.site-header__secondary {
    display: flex;
    justify-content: space-between;
    margin-block-start: 10px;

    & > * {
        width: 10rem;
        justify-content: center;
    }

    & > *:first-child {
        justify-content: flex-start;
        padding-inline-start: 0;
    }

    & > *:last-of-type {
        justify-content: flex-end;
        padding-inline-end: 0;
    }
}

.site-header__cell {
    display: inline-flex;
    align-items: center;
    padding: var(--cell-padding);
    border-inline-start: var(--cell-stroke);
    flex-shrink: 0;

    &:last-child {
        padding-inline-end: 0;
        border-inline-end: none;
    }

    &:first-child {
        padding-inline-start: 0;
        border-inline-start: none;
    }
}

.site-header__slot {
    font-size: 10px;
    font-weight: 600;
    padding-block: 0.5rem;
    padding-inline: 2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;

    & .decorative-micro-line-number {
        position: absolute;
        display: flex;
        gap: 1.5em;
        align-items: center;

        & small {
            margin: 0;
            font-size: 6px;
            display: inline-block;
        }
    }

    &:first-of-type {

        & .decorative-micro-line-number {
            right: -6rem;
            top: 0.25rem;
        }
    }

    &:last-of-type {

        & .decorative-micro-line-number {
            left: -7rem;
            top: 0.25rem;
        }
    }
}

.site-logo {
    flex: 0 0 auto;

    a {
        --bevel-size: 1rem;
        --padding: calc(1em / 3);

        display: inline-block;
        background-color: var(--color-primary);
        color: var(--color-primary-inverted);
        text-decoration: none;
        text-transform: uppercase;
        font-weight: 900;
        font-size: 1.5rem;
        padding-block: var(--padding);
        padding-inline: var(--padding) calc(var(--padding) + var(--bevel-size));
        line-height: 1.25;
        border-radius: calc(var(--bevel-size) / 4);

        mask: 
            radial-gradient(circle at 10px 10px, black 100%, transparent 0) 
            no-repeat;

        clip-path: polygon(
            0% 0%,
            100% 0%,
            100% calc(100% - var(--bevel-size)),
            calc(100% - var(--bevel-size)) 100%,
            0% 100%
            );
    }
}

.decorative-text-lines {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

/* Possibly to move to a web component? */
.decorative-text-line {
    font-size: 8px;
    display: flex;
    gap: 0.5em;
    align-items: center;
    font-weight: 600;
    letter-spacing: 0.05em;

}

.decorative-indicator {

    &[data-type="pulse-dot"] {
        position: relative;
        width: 0.75em;
        aspect-ratio: 1 / 1;
        border-radius: 50%;
        background-color: var(--color-primary);
        display: inline-block;
        flex: 0 0 auto;
        margin-inline-start: 0.5em;

        &::after {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: inherit;
            background-color: inherit;
            animation: pulse-dot 2s ease-out infinite;
        }
    }
}

/* To move to a component with nice editability */
.progress-loader {
    border: 1px solid var(--color-stroke);
    height: 10px;
    width: 218px;
    position: relative;
}

.progress-loader::before {
    content: "";
    position: absolute;
    height: 3px;
    width: calc(100% - 6px);
    inset: 3.5px;
    inset-inline-start: auto;
    background-color: var(--color-primary);
    max-width: var(--p);
}

.progress-loader::after {
    content: "";
    position: absolute;
    height: 3px;
    width: calc(100% - 6px);
    inset: 3.5px;
    background-image: url('data:image/svg+xml;utf8,<svg width="4" height="2" viewBox="0 0 4 2" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 0H3L2 2H0L1 0Z" fill="white" fill-opacity="0.4"/></svg>');
    background-size: 6px 3px; 
    background-repeat: repeat-x;
    background-position: center;
}

.decorative-circle-string {
    border: 1px solid var(--color-fg);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1 / 1;
    width: 46px;

    & span {
        font-size: 18px;
        font-weight: 900;
    }
}

.decorative-dots {
    width: 2px;
    height: 2px;
    background-color: var(--color-primary);
    border-radius: 50%;
    box-shadow: 4px 0 0 0 var(--color-primary);
}

@keyframes pulse-dot {
    0% {
        opacity: 0.8;
        transform: scale(1);
    }
    100% {
        opacity: 0;
        transform: scale(3);
    }
}

@media (prefers-reduced-motion: reduce) {
    .decorative-indicator[data-type="pulse-dot"]::after {
        animation: none;
    }
}


</style>

