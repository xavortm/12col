---
import SiteHeader from '../../../components/SiteHeader.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<SiteHeader>
    <div class="site-header__primary">
        <div class="site-header__cell site-logo">
            <a href={baseUrl}>Welcome to 12col</a>
        </div>
        <div class="site-header__cell site-header__cell--status">

            <div class="decorative-text-lines">
                <div class="decorative-row">
                    <cyber-text size="small" variant="vivid">Status: Online</cyber-text>
                    <cyber-dot animate="heartbeat"></cyber-dot>
                </div>
                <cyber-text size="small" variant="vivid">Access: Public</cyber-text>
                <cyber-text size="small" variant="vivid">Build: 12.0.1</cyber-text>
            </div>

        </div>
        <div class="site-header__cell site-header__cell--sample-text">

            <div class="decorative-text-lines">
                <cyber-text size="small">System Load: Nominal</cyber-text>
                <cyber-text size="small">Grid Mode: 12-Column</cyber-text>
                <cyber-text size="small">Breakpoints: Ready</cyber-text>
            </div>

        </div>
        <div class="site-header__cell grow site-header__cell--progress">

            <div class="decorative-text-lines">
                <cyber-text size="small">Created by 12col System</cyber-text>
                <cyber-text size="small">Module_01: Icons · Module_02: Games · Module_03: Quizzes · Grid Lab</cyber-text>
                <div class="decorative-row">
                    <cyber-progress progress="40" direction="right"></cyber-progress>
                    <cyber-progress progress="18" direction="right"></cyber-progress>
                </div>
            </div>

        </div>
        <div class="site-header__cell site-header__cell--smile">
            <div class="decorative-circle-string"><span>12</span></div>
        </div>
        <div class="site-header__cell">
            <svg width="46" height="46" viewBox="0 0 46 46" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <circle cx="23" cy="23" r="23" fill="#80F891"/>
                <path d="M40.0792 20.9505C40.0792 31.0119 32.4326 39.1683 23 39.1683C13.5674 39.1683 5.92078 31.0119 5.92078 20.9505" stroke="#030404" stroke-width="2"/>
                <path d="M9.32999 18.6745C8.06864 20.7823 5.31889 21.267 3.18823 19.7572" stroke="#030404" stroke-width="2" stroke-linecap="round"/>
                <path d="M36.67 18.6745C37.9314 20.7823 40.6811 21.267 42.8118 19.7572" stroke="#030404" stroke-width="2" stroke-linecap="round"/>
                <ellipse cx="29.1486" cy="14.3465" rx="2.73267" ry="5.23762" fill="#030404"/>
                <ellipse cx="16.8514" cy="14.3465" rx="2.73267" ry="5.23762" fill="#030404"/>
            </svg>
        </div>
        <div class="site-header__cell site-header__cell--made-by">

            <div class="decorative-text-lines">
                <cyber-text size="small">Made by</cyber-text>
                <cyber-text size="small" variant="vivid">@xavortm</cyber-text>
                <cyber-text size="small" variant="vivid">@ydarelova</cyber-text>
            </div>

        </div>
    </div>

    <div class="site-header__secondary" data-header-lines aria-hidden="true">
        <div class="site-header__slot">
            <div class="decorative-text-lines">
                <cyber-text variant="vivid">Grid-ID: 12col</cyber-text>
                <cyber-micro-line number="523" length="36"></cyber-micro-line>
            </div>
            <cyber-dot count="2" size="small"></cyber-dot>
        </div>

        <div class="site-header__slot">
            <cyber-text variant="vivid">A Grid Full of Goodies</cyber-text>
        </div>

        <div class="site-header__slot">
            <cyber-dot count="2" size="small"></cyber-dot>
            <div class="decorative-text-lines">
                <cyber-micro-line number="216" length="36" number-position="start"></cyber-micro-line>
                <cyber-text variant="vivid">v01/02/2026</cyber-text>
            </div>
        </div>
    </div>
</SiteHeader>

<style>

p {
    margin: 0;
}

.site-header__slot {
    position: relative;

    & cyber-micro-line {
        position: absolute;
    }

    &:first-of-type {

        & cyber-micro-line {
            right: -6rem;
            top: 0.25rem;
        }
    }

    &:last-of-type {

        & cyber-micro-line {
            left: -7rem;
            top: 0.25rem;
        }
    }
}

.decorative-row {
    display: flex;
    gap: 0.5em;
    align-items: center;
}

cyber-progress {
    --cyber-progress-stroke: var(--color-stroke);
    --cyber-progress-fill: var(--color-primary);
    inline-size: 218px;
}

.decorative-circle-string {
    border: 1px solid var(--color-fg);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1 / 1;
    width: 46px;

    & span {
        font-size: 18px;
        font-weight: 900;
    }
}
@container site-header (width < 640px) {

    .site-logo {

        & a {
            width: 69px;
            font-size: 12px;
        }
    }
}

@container site-header (width < 1000px) {

    .site-header__cell--progress {
        display: none;
    }

    .site-logo {
        margin-right: auto;
    }

    .site-header__secondary {

        .site-header__slot {
            padding-inline: 0;
        }

        .site-header__slot:first-of-type,
        .site-header__slot:last-of-type {
            width: 5px;

            & > * {
                display: none;
            }
        }
    }
}

@container site-header (width < 1264px) {

    .site-header__cell--sample-text,
    .site-header__cell--status {
        display: none;
    }
}

</style>

<script>
  import "@12col/cyberpunk-ui/components/cyber-dot";
  import "@12col/cyberpunk-ui/components/cyber-micro-line";
  import "@12col/cyberpunk-ui/components/cyber-progress";
  import "@12col/cyberpunk-ui/components/cyber-text";
  import { HeaderLines } from "../scripts/header-lines";

  const el = document.querySelector<HTMLElement>("[data-header-lines]");
  if (el) new HeaderLines(el);
</script>
