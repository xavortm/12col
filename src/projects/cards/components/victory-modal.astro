---
// Victory modal - shown when the player completes the game
import Modal from './modal.astro';
---

<Modal id="victory-modal" labelledby="victory-title" role="alertdialog">
    <div class="victory-modal">
        <h2 class="victory-modal__title" id="victory-title">Game won!</h2>
        <p class="victory-modal__score">
            Your score is: <strong id="victory-score">0</strong>
        </p>
        <p class="victory-modal__question">Do you want to play a new game?</p>
        <div class="victory-modal__actions">
            <button type="button" class="button" id="victory-play-again">
                Play Again
            </button>
            <button type="button" class="button button--destructive" id="victory-close">
                Close
            </button>
        </div>
    </div>
</Modal>
