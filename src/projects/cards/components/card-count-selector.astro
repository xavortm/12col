---
import { VALID_COUNTS } from "../constants";
---

<div class="card-count-selector">
  <label id="card-count-label">Set playing cards count:</label>
  <div
    class="card-count-selector__buttons"
    role="group"
    aria-labelledby="card-count-label"
  >
    {
      VALID_COUNTS.map((count) => (
        <button
          type="button"
          class="card-count-selector__button"
          aria-pressed="false"
          data-count={count}
        >
          {count}
        </button>
      ))
    }
  </div>
</div>

<style>
  .card-count-selector {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .card-count-selector__buttons {
    display: flex;
    gap: 0;
  }

  .card-count-selector__button {
    font: inherit;
    font-size: 0.875rem;
    padding: 0.25rem 0.5rem;
    border: 1px solid var(--color-stroke);
    background: var(--color-bg);
    color: var(--color-fg);
    cursor: pointer;
    min-width: 2.5rem;
  }

  .card-count-selector__button:first-child {
    border-radius: var(--radius-control) 0 0 var(--radius-control);
  }

  .card-count-selector__button:last-child {
    border-radius: 0 var(--radius-control) var(--radius-control) 0;
  }

  .card-count-selector__button:not(:first-child) {
    margin-inline-start: -1px;
  }

  .card-count-selector__button[aria-pressed="true"] {
    background: var(--color-fg);
    color: var(--color-bg);
    border-color: var(--color-fg);
    position: relative;
    z-index: 1;
  }
</style>
