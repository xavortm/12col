---
import { versions, type VersionKey } from "../versions";

interface Props {
	project: VersionKey;
}

const { project } = Astro.props;
const { label, version, date } = versions[project];
const formatted = new Date(date).toLocaleDateString("en-US", {
	year: "numeric",
	month: "short",
	day: "numeric",
	timeZone: "UTC",
});
---

<span class="version-info">{label} v{version} Â· {formatted}</span>
