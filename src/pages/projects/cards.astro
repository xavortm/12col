---
// Route: /projects/cards
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../projects/cards/components/site-header.astro';
import SiteFooter from '../../projects/cards/components/site-footer.astro';
import CardGrid from '../../projects/cards/components/cards.astro';
import Controls from '../../projects/cards/components/controls.astro';
import MuteButton from '../../projects/cards/components/mute-button.astro';
import VictoryModal from '../../projects/cards/components/victory-modal.astro';

import '../../projects/cards/styles/cards.css';
---

<Layout title="Cards Demo">
	<div class="site-container">
		<SiteHeader title="Cards Demo" subtitle="Testing out card layouts">
			<MuteButton />
		</SiteHeader>
		<div class="site-container__main">
			<main class="container container--wide">
				<Controls />
				<p class="sr-only">
					This memory card game uses live announcements to help you play.
					When you enter the card grid, you'll hear its dimensions.
					Flipping a card announces its name, and matching pairs announces your score.
				</p>
				<CardGrid />
			</main>
		</div>
		<SiteFooter />
	</div>
	<VictoryModal />
</Layout>

<script>
	import '../../projects/cards/scripts/game-init.ts';
	import '../../projects/cards/scripts/clock.ts';
	import '../../projects/cards/scripts/cards.ts';
	import '../../projects/cards/scripts/grid-layout.ts';
	import '../../projects/cards/scripts/victory-modal.ts';
</script>

<style>
	.site-container {
		display: flex;
		flex-direction: column;
		height: 100vh;
	}

	.site-container__main {
		flex: 1;
		min-height: 0;
		display: flex;
		flex-direction: column;
		padding-block: 1rem;
	}

	.site-container__main > .container {
		flex: 1;
		min-height: 0;
		display: flex;
		flex-direction: column;
	}
</style>
